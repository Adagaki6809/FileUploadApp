@model IEnumerable<FileUploadApp.Models.FileModel>
@{
    ViewData["Title"] = "Добавление файла";
}
<div  style="display:flex">
    <h3>Выберите файл для загрузки</h3>
    <form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        <input type="submit" value="Загрузить" />
    </form>

    <h3>Или загрузите сразу несколько файлов</h3>
    <form asp-action="AddFiles" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="file" name="uploads" /><br>
        <input type="file" name="uploads" /><br>
        <input type="file" name="uploads" /><br>
        <input type="submit" value="Загрузить" />
    </form>
</div>

<h3>Все файлы</h3>
<div class="container">
    <div class="col-md-7 px-0">
        @foreach (var f in Model)
        {
            <img src="@Url.Content(f.Path)" class="img-fluid">
        }
    </div>
</div>